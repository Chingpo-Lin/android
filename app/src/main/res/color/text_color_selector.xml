
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认状态，即未点击时的颜色 -->
    <item android:state_pressed="false" android:color="#0000FF" /> <!-- 蓝色 -->

    <!-- 点击状态，即点击时的颜色 -->
    <item android:state_pressed="true" android:color="#800080" /> <!-- 紫色，80 表示透明度 50% -->
</selector>